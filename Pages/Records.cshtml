@page
@model RecordsModel
@{
    ViewData["Title"] = "APRS Records";
}

<h2>APRS Records</h2>

@if (Model.APRSRecords.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Callsign</th>
                <th>NodeId</th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.APRSRecords)
            {
                <tr>
                    <td>@record.Id</td>
                    <td>@record.Callsign</td>
                    <td>@record.NodeId</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@record.Id" onsubmit="return confirm('Are you sure you want to delete this record?');">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No records found.</p>
}
